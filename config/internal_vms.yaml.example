---
vms:

  # NOTE: All `box:` declarations in this example point to
  # int-resources.puppetlabs.net and require VPN acces to download.

  - name: pe-201611-agent-win2012
    debug-kit: true
    hostname: pe-201611-agent-win2012
    box: windows-2012r2-x64-virtualbox-nocm
    roles:
      - windows
      - 2gb-memory
      - base

  - name: pe-201611-agent-win2008
    debug-kit: true
    hostname: pe-201532-agent-win2008
    box: windows-2008r2-x64-virtualbox-nocm
    providers:
      - type: vsphere
        template_name: 'templates/win-2008r2-x86_64'
    roles:
      - windows
      - 2gb-memory
      - base


  - name: pe-201611-agent-solaris10
    box: solaris-10u11-i386-virtualbox-nocm
    debug-kit: true
    roles:
      - base

  - name: pe-201611-agent-solaris11
    box: solaris-11.2-i386-virtualbox-nocm
    providers:
      - type: vsphere
        template_name: 'templates/solaris-11-x86_64'
    debug-kit: true
    roles:
      - base

  - name: pe-38nightly-master
    debug-kit: true
    box: puppetlabs/centos-6.6-64-nocm
    providers:
      - type: vsphere
        template_name: 'templates/centos-6-x86_64'
    roles:
      - pe-forward-console
      - pe-memory-tuning
      - el-stop-firewall
      - el-fix-path
      - 2gb-memory
      - base

  - name: pe-38nightly-agent
    debug-kit: true
    box: puppetlabs/centos-6.6-64-nocm
    providers:
      - type: vsphere
        template_name: 'templates/centos-6-x86_64'
    roles:
      - el-stop-firewall
      - el-fix-path
      - base

  - name: pe-20161nightly-master
    debug-kit: true
    box: puppetlabs/centos-6.6-64-nocm
    providers:
      - type: vsphere
        template_name: 'templates/centos-6-x86_64'
    roles:
      - pe-forward-console
      - pe-memory-tuning2
      - el-stop-firewall
      - el-fix-path
      - 2gb-memory
      - base

  - name: pe-20161nightly-agent
    debug-kit: true
    box: puppetlabs/centos-6.6-64-nocm
    providers:
      - type: vsphere
        template_name: 'templates/centos-6-x86_64'
    roles:
      - el-stop-firewall
      - el-fix-path
      - base

